{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es2015",
    "module": "esnext",
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noPropertyAccessFromIndexSignature": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "importHelpers": true,
    "lib": ["esnext"],
    "paths": {
      "@chair-flight/base/errors": ["libs/base/errors/src/index.ts"],
      "@chair-flight/base/types": ["libs/base/types/src/index.ts"],
      "@chair-flight/base/env": ["libs/base/env/src/index.ts"],
      "@chair-flight/base/upstash": ["libs/base/upstash/src/index.ts"],
      "@chair-flight/core/app": ["libs/core/app/src/index.ts"],
      "@chair-flight/core/redux": ["libs/core/redux/src/index.ts"],
      "@chair-flight/next/components": ["libs/next/components/src/index.ts"],
      "@chair-flight/next/server": ["libs/next/server/src/index.ts"],
      "@chair-flight/question-bank": ["libs/question-bank/src/index.ts"],
      "@chair-flight/react/components": ["libs/react/components/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
